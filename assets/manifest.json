{
	"name": "__MSG_extensionName__",
	"version": "3.1.5",
	"description": "__MSG_extensionDescription__",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://twitter.com/*",
				"https://api.twitter.com/*",
				"https://mobile.twitter.com/*",
				"*://*.twitter.com/"
			],
			"js": [
				"browser-polyfill.js",
				"index.js"
			],
			"css": [
				"style.css"
			]
		}
	],
	"permissions": [
		"storage",
		"webRequest",
		"alarms",
		"cookies",
		"downloads",
		"tabs"
	],
	"host_permissions": [
		"https://*.twitter.com/*",
		"https://twitter.com/*",
		"https://api.twitter.com/*",
		"*://*.twitter.com/"
	],
	"manifest_version": 3,
	"background": {
		"scripts": [
			"browser-polyfill.js",
			"background.js"
		]
	},
	"action": {
		"default_popup": "popup.html"
	},
	"content_security_policy": {
		"extension_pages": "default-src 'self'; connect-src 'self' https://api.twitter.com https://twitter.com/; img-src 'self' https://pbs.twimg.com https://abs.twimg.com; font-src https://fonts.gstatic.com;style-src 'self' 'unsafe-inline' https://fonts.googleapis.com"
	},
	"default_locale": "en"
}