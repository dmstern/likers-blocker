{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"rootDir": "src",
		"lib": [
			"ES2015",
			"DOM",
			"DOM.Iterable",
			"ESNext.Array"
		],
		"target": "ES6",
		"downlevelIteration": true,
		"module": "es2015",
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.scss"
	],
	"types": [
		"browser"
	]
}
