	"license": "MIT",
	"bugs": {
		"url": "https://github.com/dmstern/likers-blocker/issues"
	},
	"homepage": "https://github.com/dmstern/likers-blocker#readme",
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.0.0",
		"@types/chrome": "^0.0.212",
		"@types/firefox-webext-browser": "^109.0.0",
		"archiver": "^5.3.1",
		"mkdirp": "^2.1.3",
		"prettier": "^2.8.4",
		"rollup": "^3.15.0",
		"rollup-plugin-copy": "^3.4.0",
		"rollup-plugin-prettier": "^3.0.0",
		"rollup-plugin-sass": "^1.12.17",
		"rollup-plugin-terser": "^7.0.2",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"webextension-polyfill-ts": "^0.20.0"
	}
